---
layout: base
---

<article class="post">
    {% if hero %}
    <div class="hero">
        <img src="{{ hero }}" alt="{{ title }}" class="hero-image">
        <div class="hero-overlay">
            <h1 class="hero-title">{{ title }}</h1>
            <div class="hero-meta">
                <time datetime="{{ date | isoDate }}">
                    <i class="far fa-calendar"></i> {{ date | shortDate }}
                </time>
                {% if author %}
                <span class="author"><i class="fas fa-user-edit"></i> {{ author }}</span>
                {% endif %}
                {% if body %}
                <span class="read-time"><i class="far fa-clock"></i> {{ body | readtime }} min read</span>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}

    <div class="post-content">
        {{ content | safe }}
    </div>

    {% if tags %}
    <div class="post-tags-section">
        <h3>Tags</h3>
        <div class="post-tags">
            {% for tag in tags %}
            <a href="/tags/{{ tag | slug }}/" class="tag">{{ tag }}</a>
            {% endfor %}
        </div>
    </div>
    {% endif %}
</article>